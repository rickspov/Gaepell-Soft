# Variables de entorno para EvaaCRM Gaepell en producción
# Este archivo debe ser copiado a /home/usuario/evaa_crm_gaepell/env.sh

# Entorno de ejecución
MIX_ENV=prod

# Puerto de la aplicación
PORT=4000

# Configuración de la base de datos
DATABASE_URL=postgresql://oaswmjte:evaa_crm_password@localhost/evaa_crm_gaepell

# Clave secreta para Phoenix (generar una nueva para producción)
SECRET_KEY_BASE=tu_clave_secreta_aqui_generar_con_openssl_rand_base64_64

# Configuración del host
PHX_HOST=crm.oas.wmj.temporary.site
PHX_SERVER=true

# Configuración de LiveView
LIVE_VIEW_SIGNING_SALT=tu_salt_aqui_generar_con_openssl_rand_base64_32

# Configuración de logs
LOG_LEVEL=info

# Configuración de uploads
UPLOAD_DIR=/home2/oaswmjte/evaa_crm_gaepell/priv/static/uploads
MAX_FILE_SIZE=8388608

# Configuración de sesiones
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true 