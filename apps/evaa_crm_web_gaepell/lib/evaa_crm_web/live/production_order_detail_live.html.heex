<%= if @order do %>
  <div class="space-y-4 sm:space-y-6">
    <!-- Header -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700">
      <div class="p-4 sm:p-6">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
          <div class="flex items-start gap-3 sm:gap-4">
            <button phx-click="back" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
            </button>
            <div class="flex-1">
              <div class="flex flex-wrap items-center gap-2 sm:gap-3 mb-2">
                <span class="text-xl sm:text-2xl"></span>
                <h1 class="text-xl sm:text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                  Orden #<%= @order.id %>
                </h1>
                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200 border border-blue-200 dark:border-blue-700">
                  Producci贸n
                </span>
                <span class={"px-2 py-1 text-xs font-medium rounded-full #{get_status_color(@order.status)}"}>
                  <%= get_status_label(@order.status) %>
                </span>
              </div>
              <h2 class="text-xl mb-2">Orden de Producci贸n - <%= @order.client_name %></h2>
              <p class="text-sm text-slate-500 dark:text-slate-400">
                Check-in: <%= Calendar.strftime(@order.inserted_at, "%d/%m/%Y %H:%M") %>
              </p>
              <p class="text-muted-foreground"><%= @order.specifications %></p>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <button phx-click="edit_order" class="px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              Editar
            </button>
            <button phx-click="show_status_modal" class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-lg transition-colors">
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Cambiar Estado
            </button>
            <button phx-click="show_delete_modal" class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-colors">
              <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Eliminar
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="xl:col-span-2 space-y-6">
        
                 <!-- Vehicle Information -->
         <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-shadow">
           <div class="p-6">
             <div class="flex items-center gap-2 mb-4">
               <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12"/>
               </svg>
               <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Informaci贸n del Veh铆culo</h3>
             </div>
             <div class="grid grid-cols-2 gap-4">
               <div>
                 <p class="text-sm text-slate-500 dark:text-slate-400">Placa</p>
                 <p class="font-semibold text-slate-900 dark:text-slate-100"><%= @order.license_plate %></p>
               </div>
               <div>
                 <p class="text-sm text-slate-500 dark:text-slate-400">Marca</p>
                 <p class="font-semibold text-slate-900 dark:text-slate-100"><%= @order.truck_brand %></p>
               </div>
               <div>
                 <p class="text-sm text-slate-500 dark:text-slate-400">Modelo</p>
                 <p class="font-semibold text-slate-900 dark:text-slate-100"><%= @order.truck_model %></p>
               </div>
               <div>
                 <p class="text-sm text-slate-500 dark:text-slate-400">Tipo de Caja</p>
                 <p class="font-semibold text-slate-900 dark:text-slate-100"><%= get_box_type_label(@order.box_type) %></p>
               </div>
             </div>
           </div>
         </div>

         <!-- Technical Measurements -->
         <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-shadow">
           <div class="p-6">
             <div class="flex items-center justify-between mb-4">
               <div class="flex items-center gap-2">
                 <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                 </svg>
                 <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Medidas T茅cnicas</h3>
               </div>
               <button phx-click="show_technical_measurements_edit_modal" class="px-3 py-1 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                 <svg class="w-4 h-4 mr-2 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                 </svg>
                 Editar
               </button>
             </div>
             
             <%= if @truck do %>
               <!-- Show existing truck measurements -->
               <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Ancho Gomas Traseras</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck.rear_tire_width do %>
                       <%= @truck.rear_tire_width %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Largo til</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck.useful_length do %>
                       <%= @truck.useful_length %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Largo del Chasis</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck.chassis_length do %>
                       <%= @truck.chassis_length %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Ancho del Chasis</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck.chassis_width do %>
                       <%= @truck.chassis_width %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
               </div>
             <% else %>
               <!-- Show measurements from production order form -->
               <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Ancho Gomas Traseras</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @order.rear_tire_width && @order.rear_tire_width != "" do %>
                       <%= @order.rear_tire_width %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Largo til</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @order.useful_length && @order.useful_length != "" do %>
                       <%= @order.useful_length %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Largo del Chasis</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @order.chassis_width && @order.chassis_width != "" do %>
                       <%= @order.chassis_width %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Ancho del Chasis</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @order.chassis_width && @order.chassis_width != "" do %>
                       <%= @order.chassis_width %> cm
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
               </div>
             <% end %>
             
             <!-- Additional technical information -->
             <div class="mt-6 pt-6 border-t border-slate-200 dark:border-slate-600">
               <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">A帽o del Veh铆culo</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck && @truck.year do %>
                       <%= @truck.year %>
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Capacidad</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck && @truck.capacity do %>
                       <%= @truck.capacity %>
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
                 <div>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Tipo de Combustible</p>
                   <p class="font-semibold text-slate-900 dark:text-slate-100">
                     <%= if @truck && @truck.fuel_type do %>
                       <%= case @truck.fuel_type do
                         "diesel" -> "Diesel"
                         "gasoline" -> "Gasolina"
                         "electric" -> "El茅ctrico"
                         "hybrid" -> "H铆brido"
                         _ -> @truck.fuel_type
                       end %>
                     <% else %>
                       <span class="text-slate-400 dark:text-slate-500">No especificado</span>
                     <% end %>
                   </p>
                 </div>
               </div>
             </div>
           </div>
         </div>

         <!-- Production Progress -->
         <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-shadow">
           <div class="p-6">
             <h3 class="text-lg font-semibold flex items-center gap-2 mb-4">
               <svg class="w-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
               </svg>
               Progreso de Producci贸n
             </h3>
             <div class="space-y-6">
               <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                 <div class="text-center p-4 border rounded-lg">
                   <svg class="h-6 w-6 text-green-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                   </svg>
                   <p class="text-2xl font-bold"><%= get_production_progress(@order) %>%</p>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Completado</p>
                 </div>
                 <div class="text-center p-4 border rounded-lg">
                   <svg class="h-6 w-6 text-blue-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                   </svg>
                   <p class="text-2xl font-bold">
                     <%= if @order.estimated_delivery do %>
                       <%= get_days_remaining(@order.estimated_delivery) %>
                     <% else %>
                       -
                     <% end %>
                   </p>
                   <p class="text-sm text-slate-500 dark:text-slate-400">D铆as Restantes</p>
                 </div>
                 <div class="text-center p-4 border rounded-lg">
                   <svg class="h-6 w-6 text-purple-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                   </svg>
                   <p class="text-2xl font-bold">
                     <%= case @order.status do
                       "new_order" -> "0%"
                       "reception" -> "20%"
                       "assembly" -> "40%"
                       "mounting" -> "60%"
                       "final_check" -> "80%"
                       "completed" -> "100%"
                       "cancelled" -> "0%"
                       _ -> "0%"
                     end %>
                   </p>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Por Estado</p>
                 </div>
                 <div class="text-center p-4 border rounded-lg">
                   <svg class="h-6 w-6 text-orange-600 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                     <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                   </svg>
                   <p class="text-2xl font-bold">
                     <%= if @order.total_cost do %>
                       $<%= @order.total_cost %>
                     <% else %>
                       -
                     <% end %>
                   </p>
                   <p class="text-sm text-slate-500 dark:text-slate-400">Costo</p>
                 </div>
               </div>
               
               <!-- Interactive Progress Bar -->
               <div class="space-y-4">
                 <div class="flex items-center justify-between">
                   <h4 class="font-semibold">Control de Progreso</h4>
                   <span class="px-2 py-1 text-xs font-medium rounded-full border border-slate-300 dark:border-slate-600">
                     <%= get_production_progress(@order) %>% completado
                   </span>
                 </div>
                 
                 <div class="space-y-3">
                   <div class="w-full bg-slate-200 dark:bg-slate-700 rounded-full h-3">
                     <div class="bg-gradient-to-r from-green-600 to-blue-600 h-3 rounded-full transition-all duration-300" 
                          style={"width: #{get_production_progress(@order)}%"}></div>
                   </div>
                   <div class="space-y-2">
                     <div class="flex items-center justify-between text-sm text-slate-500 dark:text-slate-400">
                       <span>0%</span>
                       <span>Ajustar progreso</span>
                       <span>100%</span>
                     </div>
                     <input type="range" 
                            id="progress-slider"
                            min="0" 
                            max="100" 
                            step="5" 
                            value={get_production_progress(@order)}
                            phx-hook="ProgressSlider"
                            data-progress={get_production_progress(@order)}
                            class="w-full h-2 bg-slate-200 dark:bg-slate-700 rounded-lg appearance-none cursor-pointer slider">
                   </div>
                 </div>
                 
                 <div class="flex gap-2">
                   <button phx-click="update_production_progress" phx-value-progress="0" 
                           class="px-3 py-1 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                     Reiniciar
                   </button>
                   <button phx-click="update_production_progress" phx-value-progress="25" 
                           class="px-3 py-1 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                     25%
                   </button>
                   <button phx-click="update_production_progress" phx-value-progress="50" 
                           class="px-3 py-1 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                     50%
                   </button>
                   <button phx-click="update_production_progress" phx-value-progress="75" 
                           class="px-3 py-1 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors text-sm">
                     75%
                   </button>
                   <button phx-click="update_production_progress" phx-value-progress="100" 
                           class="px-3 py-1 border border-green-500 text-green-600 rounded-lg hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors text-sm">
                     Completar
                   </button>
                 </div>
               </div>
             </div>
           </div>
         </div>

                 <!-- Production Details -->
         <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 hover:shadow-xl transition-shadow">
           <div class="p-6">
             <div class="flex items-center justify-between mb-4">
               <div class="flex items-center gap-2">
                 <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                 </svg>
                 <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Detalles de Producci贸n</h3>
               </div>
               <button phx-click="edit_production_details" class="px-3 py-1.5 border border-gray-300 dark:border-gray-600 rounded-lg text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors text-sm">
                 <svg class="w-4 h-4 mr-1 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                   <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                 </svg>
                 Editar
               </button>
             </div>
            <div class="space-y-4">
              <div>
                <p class="text-sm text-slate-500 dark:text-slate-400">Especificaciones</p>
                <p class="font-semibold text-slate-900 dark:text-slate-100"><%= @order.specifications %></p>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-500 dark:text-slate-400">Entrega Estimada</p>
                  <p class="font-semibold text-slate-900 dark:text-slate-100">
                    <%= if @order.estimated_delivery do %>
                      <%= Calendar.strftime(@order.estimated_delivery, "%d/%m/%Y") %>
                    <% else %>
                      No especificada
                    <% end %>
                  </p>
                </div>
                <div>
                  <p class="text-sm text-slate-500 dark:text-slate-400">Entrega Real</p>
                  <p class="font-semibold text-slate-900 dark:text-slate-100">
                    <%= if @order.actual_delivery_date do %>
                      <%= Calendar.strftime(@order.actual_delivery_date, "%d/%m/%Y") %>
                    <% else %>
                      Pendiente
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-slate-500 dark:text-slate-400">Costo Total</p>
                  <p class="font-semibold text-slate-900 dark:text-slate-100">
                    <%= if @order.total_cost do %>
                      $<%= @order.total_cost %>
                    <% else %>
