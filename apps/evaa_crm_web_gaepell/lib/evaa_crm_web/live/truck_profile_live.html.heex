<div class="space-y-6 sm:space-y-8">
  <!-- Header Hero -->
  <div class="relative overflow-hidden rounded-2xl bg-gradient-to-r from-blue-600 via-purple-600 to-blue-800 p-4 sm:p-8 text-white shadow-xl">
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="relative z-10 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 sm:gap-6">
      <div class="flex flex-col sm:flex-row sm:items-center gap-4 sm:gap-6">
        <div class="relative">
          <%= if @truck.profile_photo do %>
            <img src={@truck.profile_photo} alt={@truck.model} class="h-20 w-20 sm:h-24 sm:w-24 rounded-2xl object-cover border-4 border-white/20 shadow-xl" />
          <% else %>
            <div class="h-20 w-20 sm:h-24 sm:w-24 rounded-2xl bg-white/20 border-4 border-white/20 shadow-xl flex items-center justify-center">
              <svg class="h-10 w-10 sm:h-12 sm:w-12 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
      </div>
          <% end %>
          <div class="absolute -bottom-2 -right-2 h-6 w-6 sm:h-8 sm:w-8 rounded-full bg-white flex items-center justify-center shadow-lg">
            <svg class="h-3 w-3 sm:h-4 sm:w-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
    </div>
        </div>
        <div class="text-center sm:text-left">
          <h1 class="text-2xl sm:text-3xl font-bold mb-2"><%= @truck.brand %> <%= @truck.model %></h1>
          <p class="text-sm sm:text-xl text-white/80 mb-2">Propietario: <%= @truck.owner || "N/A" %> • Año: <%= @truck.year %></p>
          <p class="text-sm sm:text-lg text-white/80 mb-2">Ficha: <%= @truck.ficha || "N/A" %></p>
          <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
            <span class={truck_status_classes(@truck)}>
              <%= truck_status_label(@truck) %>
            </span>
            <div class="flex items-center justify-center sm:justify-start gap-1 text-white/80">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              <span>Placa: <%= @truck.license_plate %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-col sm:flex-row gap-2 sm:gap-3">
      <button 
        phx-click="show_edit_form"
          class="bg-white/10 border-white/20 text-white hover:bg-white/20 border px-3 sm:px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-colors text-sm sm:text-base">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
          Editar
      </button>
        <a href="/checkin-wizard" class="bg-white text-blue-600 hover:bg-white/90 shadow-lg px-3 sm:px-4 py-2 rounded-lg flex items-center justify-center gap-2 transition-colors text-sm sm:text-base">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
          Nuevo Ticket
        </a>
    </div>
  </div>
          </div>

  <!-- Información Técnica del Camión -->
  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6">
    <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover-lift bg-card dark:bg-card rounded-xl cursor-pointer" phx-click="edit_box_type">
      <div class="p-6 text-center">
        <div class="h-12 w-12 rounded-xl gradient-info flex items-center justify-center mx-auto mb-3 shadow-lg">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
        <div class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-1"><%= @truck.capacity || "N/A" %></div>
        <p class="text-sm text-slate-600 dark:text-slate-400">Tipo de Caja</p>
        <div class="text-xs text-slate-500 dark:text-slate-400 mt-1">
          <%= @truck.license_plate %>
      </div>
          </div>
          </div>
    
    <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover-lift bg-card dark:bg-card rounded-xl cursor-pointer" phx-click="edit_tire_width">
      <div class="p-6 text-center">
        <div class="h-12 w-12 rounded-xl gradient-success flex items-center justify-center mx-auto mb-3 shadow-lg">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          </div>
        <div class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-1"><%= format_measurement_with_conversion(@truck.rear_tire_width) %></div>
        <p class="text-sm text-slate-600 dark:text-slate-400">Ancho de Gomas Traseras</p>
          </div>
        </div>
    
    <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover-lift bg-card dark:bg-card rounded-xl cursor-pointer" phx-click="edit_useful_length">
      <div class="p-6 text-center">
        <div class="h-12 w-12 rounded-xl gradient-warning flex items-center justify-center mx-auto mb-3 shadow-lg">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
          </svg>
      </div>
        <div class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-1"><%= format_measurement_with_conversion(@truck.useful_length) %></div>
        <p class="text-sm text-slate-600 dark:text-slate-400">Largo útil</p>
    </div>
  </div>

        <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 hover-lift bg-card dark:bg-card rounded-xl cursor-pointer" phx-click="edit_chassis_width">
      <div class="p-6 text-center">
        <div class="h-12 w-12 rounded-xl gradient-primary flex items-center justify-center mx-auto mb-3 shadow-lg">
          <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
        <div class="text-lg font-bold text-slate-900 dark:text-slate-100 mb-1"><%= format_measurement_with_conversion(@truck.chassis_width) %></div>
        <p class="text-sm text-slate-600 dark:text-slate-400">Ancho de Chasis</p>
        </div>
        </div>
      </div>

  <!-- Main Content Tabs -->
  <div class="space-y-6">
    <!-- Tabs Navigation -->
    <div class="bg-slate-100 dark:bg-slate-800 rounded-xl p-1">
      <div class="grid grid-cols-4 gap-1">
                 <button 
           phx-click="set_active_tab" 
           phx-value-tab="overview"
           class={"#{tab_classes(@active_tab, "overview")} rounded-lg px-4 py-2 text-sm font-medium transition-all duration-200"}>
           Resumen
         </button>
         <button 
           phx-click="set_active_tab" 
           phx-value-tab="tickets"
           class={"#{tab_classes(@active_tab, "tickets")} rounded-lg px-4 py-2 text-sm font-medium transition-all duration-200"}>
           Tickets
         </button>
         <button 
           phx-click="set_active_tab" 
           phx-value-tab="documents"
           class={"#{tab_classes(@active_tab, "documents")} rounded-lg px-4 py-2 text-sm font-medium transition-all duration-200"}>
           Documentos & Fotos
         </button>
         <button 
           phx-click="set_active_tab" 
           phx-value-tab="notes"
           class={"#{tab_classes(@active_tab, "notes")} rounded-lg px-4 py-2 text-sm font-medium transition-all duration-200"}>
           Notas
         </button>
    </div>
  </div>

    <!-- Tab Content -->
    <div class="mt-8">
      <!-- Overview Tab -->
      <%= if @active_tab == "overview" do %>
      <div class="space-y-6">
          <!-- Technical Info -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
              <div class="bg-gradient-to-r from-slate-50 to-blue-50 dark:from-slate-800/50 dark:to-blue-900/20 rounded-t-xl p-6">
                <div class="flex items-center justify-between">
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Información Técnica</h3>
                  <button 
                    phx-click="show_technical_info_modal"
                    class="bg-blue-600 hover:bg-blue-700 text-white border-0 shadow-lg hover:shadow-xl transition-all duration-200 px-3 py-1 rounded-lg flex items-center gap-2 text-sm">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Editar
                  </button>
            </div>
                </div>
              <div class="p-6 space-y-4">
                <div class="flex items-center justify-between py-2 border-b border-slate-100 dark:border-slate-700">
                  <span class="text-slate-600 dark:text-slate-400">Ancho gomas traseras:</span>
                  <span class="font-medium text-slate-900 dark:text-slate-100"><%= format_measurement_with_conversion(@truck.rear_tire_width) %></span>
                  </div>
                <div class="flex items-center justify-between py-2 border-b border-slate-100 dark:border-slate-700">
                  <span class="text-slate-600 dark:text-slate-400">Largo útil:</span>
                  <span class="font-medium text-slate-900 dark:text-slate-100"><%= format_measurement_with_conversion(@truck.useful_length) %></span>
                  </div>
                <div class="flex items-center justify-between py-2 border-b border-slate-100 dark:border-slate-700">
                  <span class="text-slate-600 dark:text-slate-400">Ancho chassis:</span>
                  <span class="font-medium text-slate-900 dark:text-slate-100"><%= format_measurement_with_conversion(@truck.chassis_width) %></span>
                </div>
              </div>
            </div>

            <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
              <div class="bg-gradient-to-r from-slate-50 to-green-50 dark:from-slate-800/50 dark:to-green-900/20 rounded-t-xl p-6">
                <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Mantenimientos Realizados</h3>
              </div>
            <div class="p-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2"><%= length(@tickets) %></div>
                  <p class="text-slate-600 dark:text-slate-400 mb-4">Tickets de mantenimiento</p>
                  <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-3">
                    <div class="flex items-center gap-2 text-sm text-green-700 dark:text-green-300">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span>Total de servicios</span>
                    </div>
        </div>
                    </div>
  </div>
              </div>

            <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
              <div class="bg-gradient-to-r from-slate-50 to-purple-50 dark:from-slate-800/50 dark:to-purple-900/20 rounded-t-xl p-6">
                <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Información Adicional</h3>
                    </div>
              <div class="p-6">
                <div class="space-y-4">
                  <div class="flex items-center gap-3">
                    <div class="h-3 w-3 rounded-full bg-blue-500"></div>
                    <span class="text-sm text-slate-700 dark:text-slate-300">Garantía: No</span>
        </div>
                  <div class="flex items-center gap-3">
                    <div class="h-3 w-3 rounded-full bg-green-500"></div>
                    <span class="text-sm text-slate-700 dark:text-slate-300">Tipo de caja: Seca</span>
                      </div>
                      </div>
                  </div>
                </div>

          <!-- Recent Activity -->
          <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
            <div class="bg-gradient-to-r from-slate-50 to-indigo-50 dark:from-slate-800/50 dark:to-indigo-900/20 rounded-t-xl p-6">
              <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Actividad Reciente</h3>
            </div>
            <div class="p-6">
              <div class="space-y-4">
                <%= for ticket <- Enum.take(@tickets, 3) do %>
                  <div class="flex items-center space-x-4 p-4 border border-slate-200/60 dark:border-slate-700/60 rounded-xl hover:shadow-md transition-all duration-200 hover-lift bg-white dark:bg-slate-800/50">
                    <div class="h-12 w-12 rounded-xl gradient-primary flex items-center justify-center shadow-lg">
                      <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-slate-900 dark:text-slate-100"><%= evaluation_type_label(ticket) %></h4>
                      <p class="text-sm text-slate-600 dark:text-slate-400"><%= ticket.description %></p>
                      <div class="flex items-center gap-4 mt-2 text-xs text-slate-500 dark:text-slate-400">
                        <div class="flex items-center gap-1">
                          <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <span><%= Calendar.strftime(ticket.inserted_at, "%d/%m/%Y") %></span>
  </div>
                                                 <div class="flex items-center gap-1">
                           <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                           <span><%= specialist_name(ticket) %></span>
            </div>
                  </div>
            </div>
                                         <div class="text-right">
                       <span class={status_classes(ticket)}><%= status_label(ticket) %></span>
                       <div class="flex items-center gap-1 mt-2 text-sm font-medium text-slate-700 dark:text-slate-300">
                         <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                         <span><%= if total_cost(ticket), do: Number.Currency.number_to_currency(total_cost(ticket)), else: "N/A" %></span>
                    </div>
                      </div>
                      </div>
                    <% end %>
                      </div>
  </div>
        </div>
                  </div>
                </div>
              <% end %>

      <!-- Tickets Tab -->
      <%= if @active_tab == "tickets" do %>
        <div class="space-y-6">
          <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
            <div class="bg-gradient-to-r from-slate-50 to-blue-50 dark:from-slate-800/50 dark:to-blue-900/20 rounded-t-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Todos los Tickets</h3>
                  <p class="text-slate-600 dark:text-slate-400">Evaluaciones, mantenimientos y órdenes de producción</p>
            </div>
            <a href="/checkin-wizard" class="gradient-primary text-white border-0 shadow-lg hover:shadow-xl transition-all duration-200 px-4 py-2 rounded-lg flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
              Nuevo Ticket
            </a>
          </div>
          </div>
            <div class="p-6">
      <div class="space-y-4">
                <%= for ticket <- @all_tickets do %>
                  <div class="flex items-center space-x-4 p-6 border border-slate-200/60 dark:border-slate-700/60 rounded-xl hover:shadow-md transition-all duration-200 hover-lift bg-white dark:bg-slate-800/50">
                    <div class="h-14 w-14 rounded-xl gradient-primary flex items-center justify-center shadow-lg">
                      <%= get_ticket_icon(ticket) %>
                    </div>
              <div class="flex-1">
                      <div class="flex items-center gap-3 mb-2">
                        <h4 class="font-semibold text-slate-900 dark:text-slate-100 text-lg"><%= evaluation_type_label(ticket) %></h4>
                        <span class={status_classes(ticket)}><%= status_label(ticket) %></span>
                      </div>
                      <p class="text-slate-600 dark:text-slate-400 mb-3"><%= ticket.description %></p>
                      <div class="flex items-center gap-6 text-sm text-slate-500 dark:text-slate-400">
                        <div class="flex items-center gap-2">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                          </svg>
                          <span><%= Calendar.strftime(get_ticket_date(ticket), "%d/%m/%Y") %></span>
                        </div>
                        <div class="flex items-center gap-2">
                          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                          <span><%= specialist_name(ticket) %></span>
                      </div>
                </div>
              </div>
                    <div class="text-right">
                      <div class="flex items-center gap-1 text-lg font-semibold text-slate-900 dark:text-slate-100 mb-3">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                        <span><%= if total_cost(ticket), do: Number.Currency.number_to_currency(total_cost(ticket)), else: "N/A" %></span>
                </div>
                      <button class="border border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800 px-3 py-1 rounded text-sm transition-colors">
                        Ver Detalles
                      </button>
            </div>
          </div>
        <% end %>
      </div>
  </div>
                </div>
        </div>
      <% end %>

      <!-- Documents Tab -->
      <%= if @active_tab == "documents" do %>
        <div class="space-y-6">
          <div class="border-0 shadow-lg hover:shadow-xl transition-all duration-300 bg-card dark:bg-card rounded-xl">
            <div class="bg-gradient-to-r from-slate-50 to-green-50 dark:from-slate-800/50 dark:to-green-900/20 rounded-t-xl p-6">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Documentos</h3>
                  <p class="text-slate-600 dark:text-slate-400">Archivos y documentos asociados al camión</p>
                </div>
                <div class="flex gap-2">
          <button 
