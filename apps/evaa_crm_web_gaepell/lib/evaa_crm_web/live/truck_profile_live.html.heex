                <%= if @maintenance_fullscreen_photo.ticket.visible_damage && @maintenance_fullscreen_photo.ticket.visible_damage != "" do %>
                  <div class="md:col-span-2">
                    <p class="text-gray-300 mb-1"><strong>Daños Visibles:</strong></p>
                    <p class="text-white"><%= @maintenance_fullscreen_photo.ticket.visible_damage %></p>
                  </div>
                <% end %>
              </div>
            </div>
            
            <!-- Comentarios del ticket -->
            <%= if @maintenance_fullscreen_photo.ticket.exit_notes && @maintenance_fullscreen_photo.ticket.exit_notes != "" do %>
              <div class="mb-4">
                <h4 class="text-lg font-semibold mb-2">Comentarios:</h4>
                <p class="text-gray-200 leading-relaxed"><%= @maintenance_fullscreen_photo.ticket.exit_notes %></p>
