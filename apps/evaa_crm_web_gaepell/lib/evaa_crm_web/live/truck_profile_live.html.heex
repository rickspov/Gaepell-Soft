            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
              Guardar
            </button>
          </div>
        </form>
      </div>
    </div>
  <% end %>

  <!-- Edit Truck Modal -->
  <%= if @show_edit_form do %>
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 w-full max-w-2xl mx-4 max-h-[90vh] overflow-y-auto">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-slate-900 dark:text-slate-100">Editar Camión</h3>
          <button phx-click="hide_edit_form" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-300">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        
        <form phx-submit="update_truck" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Marca *</label>
              <input type="text" name="truck[brand]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :brand), else: if @editing_truck, do: @editing_truck.brand, else: ""} required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Modelo *</label>
              <input type="text" name="truck[model]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :model), else: if @editing_truck, do: @editing_truck.model, else: ""} required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
          </div>
          
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Placa *</label>
              <input type="text" name="truck[license_plate]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :license_plate), else: if @editing_truck, do: @editing_truck.license_plate, else: ""} required class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Número de Chasis</label>
              <input type="text" name="truck[chassis_number]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :chassis_number), else: if @editing_truck, do: @editing_truck.chassis_number, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">VIN</label>
              <input type="text" name="truck[vin]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :vin), else: if @editing_truck, do: @editing_truck.vin, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Color</label>
              <input type="text" name="truck[color]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :color), else: if @editing_truck, do: @editing_truck.color, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Año</label>
              <input type="number" name="truck[year]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :year), else: if @editing_truck, do: @editing_truck.year, else: ""} min="1900" max="2030" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Capacidad</label>
              <input type="text" name="truck[capacity]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :capacity), else: if @editing_truck, do: @editing_truck.capacity, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
              </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Tipo de Combustible</label>
              <select name="truck[fuel_type]" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
                <option value="diesel" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :fuel_type) == "diesel", else: if @editing_truck, do: @editing_truck.fuel_type == "diesel", else: true}>Diesel</option>
                <option value="gasoline" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :fuel_type) == "gasoline", else: if @editing_truck, do: @editing_truck.fuel_type == "gasoline", else: false}>Gasolina</option>
                <option value="electric" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :fuel_type) == "electric", else: if @editing_truck, do: @editing_truck.fuel_type == "electric", else: false}>Eléctrico</option>
                <option value="hybrid" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :fuel_type) == "hybrid", else: if @editing_truck, do: @editing_truck.fuel_type == "hybrid", else: false}>Híbrido</option>
              </select>
        </div>

            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Estado</label>
              <select name="truck[status]" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
                <option value="active" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :status) == "active", else: if @editing_truck, do: @editing_truck.status == "active", else: true}>Activo</option>
                <option value="maintenance" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :status) == "maintenance", else: if @editing_truck, do: @editing_truck.status == "maintenance", else: false}>En Mantenimiento</option>
                <option value="inactive" selected={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :status) == "inactive", else: if @editing_truck, do: @editing_truck.status == "inactive", else: false}>Inactivo</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Propietario</label>
              <input type="text" name="truck[owner]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :owner), else: if @editing_truck, do: @editing_truck.owner, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Ficha</label>
              <input type="text" name="truck[ficha]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :ficha), else: if @editing_truck, do: @editing_truck.ficha, else: ""} class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
            </div>
            
            <div>
              <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Kilometraje</label>
              <input type="number" name="truck[kilometraje]" value={if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :kilometraje), else: if @editing_truck, do: @editing_truck.kilometraje, else: "0"} min="0" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Notas Generales</label>
            <textarea name="truck[general_notes]" rows="3" class="w-full px-3 py-2 border border-slate-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-slate-700 dark:text-white">{if is_struct(@editing_truck, Ecto.Changeset), do: Ecto.Changeset.get_field(@editing_truck, :general_notes), else: if @editing_truck, do: @editing_truck.general_notes, else: ""}</textarea>
        </div>

          <div class="flex justify-end space-x-3">
            <button type="button" phx-click="hide_edit_form" class="px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600">
              Cancelar
            </button>
            <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700">
              Guardar Cambios
          </button>
        </div>
        </form>
    </div>
  </div>
<% end %> 
</div>
