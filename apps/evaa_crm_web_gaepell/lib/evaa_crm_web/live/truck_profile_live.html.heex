                  <%= String.upcase(@maintenance_fullscreen_photo.ticket.status || "check_in") %>
                </span>
              </div>
              <div class="text-sm text-gray-300">
                <%= if @maintenance_fullscreen_photo.ticket.entry_date, do: Calendar.strftime(@maintenance_fullscreen_photo.ticket.entry_date, "%d/%m/%Y %H:%M"), else: "Sin fecha" %>
              </div>
            </div>
            
            <!-- Información del ticket -->
            <div class="mb-4">
              <h4 class="text-lg font-semibold mb-2">Información del Ticket:</h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                <div>
                  <p class="text-gray-300 mb-1"><strong>Título:</strong></p>
                  <p class="text-white"><%= @maintenance_fullscreen_photo.ticket.title || "Sin título" %></p>
                </div>
                <div>
                  <p class="text-gray-300 mb-1"><strong>Kilometraje:</strong></p>
                  <p class="text-white"><%= if @maintenance_fullscreen_photo.ticket.mileage, do: "#{@maintenance_fullscreen_photo.ticket.mileage} km", else: "No especificado" %></p>
                </div>
                <div class="md:col-span-2">
                  <p class="text-gray-300 mb-1"><strong>Descripción:</strong></p>
                  <p class="text-white"><%= @maintenance_fullscreen_photo.ticket.description || "Sin descripción" %></p>
