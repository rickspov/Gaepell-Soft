                  <%= for factura <- symasoft_view.facturas do %>
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                      <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-center text-gray-900 dark:text-white"><%= factura.numero %></td>
                      <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-center text-gray-900 dark:text-white"><%= factura.fecha %></td>
                      <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(factura.valor) %></td>
                      <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(factura.recibido) %></td>
                      <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(factura.pendiente) %></td>
                    </tr>
                  <% end %>
                  <!-- Totals Row -->
                  <tr class="bg-gray-50 dark:bg-gray-700 font-semibold">
                    <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-center text-gray-900 dark:text-white" colspan="2">TOTALES</td>
                    <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(symasoft_view.header.monto_total) %></td>
                    <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(symasoft_view.header.monto_total) %></td>
                    <td class="border border-gray-400 dark:border-gray-600 px-4 py-2 text-right text-gray-900 dark:text-white">RD$ <%= format_currency(symasoft_view.balance_pendiente) %></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>

        <!-- Balance Section -->
        <div class="mb-6">
          <div class="text-center mb-4">
            <h2 class="text-lg font-bold text-gray-900 dark:text-white">
              Balance Pendiente RD$ <%= format_currency(symasoft_view.balance_pendiente) %>
            </h2>
          </div>
        </div>

        <!-- Close Button -->
        <div class="flex justify-end">
          <button type="button" phx-click="hide_quotation_preview" class="bg-gray-500 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg">
            Cerrar
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %> 