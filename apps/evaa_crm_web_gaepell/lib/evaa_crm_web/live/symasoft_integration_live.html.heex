<script>
  // Manejar la selecci√≥n de tipo de ticket
  document.addEventListener('DOMContentLoaded', function() {
    const ticketTypeSelect = document.querySelector('select[name="ticket_type"]');
    const ticketSelection = document.getElementById('ticket_selection');
    const ticketIdSelect = document.querySelector('select[name="ticket_id"]');
    
    if (ticketTypeSelect) {
      ticketTypeSelect.addEventListener('change', function() {
        const selectedType = this.value;
        
        if (selectedType === '') {
          ticketSelection.classList.add('hidden');
          ticketIdSelect.innerHTML = '<option value="">Seleccionar...</option>';
        } else {
          ticketSelection.classList.remove('hidden');
          
          // Limpiar opciones actuales
          ticketIdSelect.innerHTML = '<option value="">Seleccionar...</option>';
          
          // Agregar opciones seg√∫n el tipo seleccionado
          if (selectedType === 'maintenance') {
            // Agregar tickets de mantenimiento
            const maintenanceTickets = <%= Jason.encode!(Enum.map(@maintenance_tickets, fn {label, id} -> %{label: label, id: id} end)) %>;
            maintenanceTickets.forEach(function(ticket) {
              const option = document.createElement('option');
              option.value = ticket.id;
              option.textContent = ticket.label;
              ticketIdSelect.appendChild(option);
            });
          } else if (selectedType === 'production') {
            // Agregar √≥rdenes de producci√≥n
            const productionOrders = <%= Jason.encode!(Enum.map(@production_orders, fn {label, id} -> %{label: label, id: id} end)) %>;
            productionOrders.forEach(function(order) {
              const option = document.createElement('option');
              option.value = order.id;
              option.textContent = order.label;
              ticketIdSelect.appendChild(option);
            });
          }
        }
      });
    }
  });

  // Mostrar estado de carga cuando se env√≠a el formulario
  document.addEventListener('phx:submit', function(e) {
    if (e.target.closest('form[phx-submit="import_symasoft_pdf"]')) {
      const progressDiv = document.getElementById('upload-progress');
      if (progressDiv) {
        progressDiv.classList.remove('hidden');
      }
    }
  });
</script> 